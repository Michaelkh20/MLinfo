@using MLinfo_v1._0.Models.DatabasedModels
@model IEnumerable<Keyword>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Keywords List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Keywords" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Create new Keyword
            </a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.KeywordE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KeywordR)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Articles)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var keyword in Model)
            {
                    <tr>
                        <td>
                        @keyword.KeywordE
                        </td>
                        <td>
                        @keyword.KeywordR
                        </td>
                         <td>
                        @keyword.ArticlesToString()
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Keywords" asp-action="Details" asp-route-id="@keyword.ID"
                           class="btn btn-info mx-2"> <i class="bi bi-x-square"></i> Details</a>
                                <a asp-controller="Keywords" asp-action="Edit" asp-route-id="@keyword.ID"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="Keywords" asp-action="Delete" asp-route-id="@keyword.ID"
                           class="btn btn-danger mx-2"> <i class="bi bi-x-square"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>