@using MLinfo_v1._0.Models.DatabasedModels
@model Organization

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Organization</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameE)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameE)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameR)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameR)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @((Model.Country==null)?"---":Html.DisplayFor(model => model.Country!.NameE))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Authors)
        </dt>
        <dd class="col-sm-10">
            @Model.AuthorsToString()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-outline-danger">Edit</a> |
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
