@model IEnumerable<MLinfo_v1._0.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Authors List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Authors" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Create new Author
            </a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NameE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NameR)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Articles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Organizations)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>
                        @author.NameE
                    </td>
                    <td>
                        @author.NameR
                    </td>
                    <td>
                        @author.ArticlesToString()
                    </td>
                    <td>
                        @author.OrganizationsToString()
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Authors" asp-action="Details" asp-route-id="@author.ID"
                           class="btn btn-info mx-2"> <i class="bi bi-x-square"></i> Details</a>
                            <a asp-controller="Authors" asp-action="Edit" asp-route-id="@author.ID"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Authors" asp-action="Delete" asp-route-id="@author.ID"
                           class="btn btn-danger mx-2"> <i class="bi bi-x-square"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
